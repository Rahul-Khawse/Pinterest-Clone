<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Post</title>
  <link rel="stylesheet" href="/stylesheets/add.css">
</head>
<body>

<form action="/upload" method="post" enctype="multipart/form-data">
  <div class="header">
    <h1>Create a Pin</h1>
    <h3>Let your creativity shine.</h3>
  </div>
  <div class="login-container">
    <div class="form-group">
        <label for="password">Image</label>
        <input type="file" name="file" id="image">
    </div>

    <div class="form-group">
      <label for="username">Caption</label>
      <input type="text" name="posttext" placeholder="caption for post .....">
    </div>
    
    <button class="submit-btn" onclick="login()">Post</button>
  </div>
</form>


  <script>
    function login() {
      alert('Successfully created a post');
    }
  </script>
</body>
</html>
